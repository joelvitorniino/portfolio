// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // Ensure the .env file contains this variable.
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  url         String
  imageLink   String
  height      Int
  width       Int
  repository  String

  @@map("projects") // Optional: Explicitly maps the model to the "projects" table name
}
